<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <ul class="list-unstyled">
		<% @users.each do |user| %>
			<% if user.profile %>
			  <li>
			  <div class="well row <%= cycle('white-bg', '') %>">
			    <div class="col-sm-4 text-center">
				  	<% if user.profile.avatar %>

				  	  <%= link_to user do %> <!-- Here we link to the user profile -->
					  <%= image_tag user.profile.avatar.url(:thumb), class: 'image_profile1' %><br/>
					  <% end %>

					<% end %>
				 </div>	

				 <div>
				 	  <%= link_to user do %> <!-- Here we link to the user profile -->
					  	<h4><%= user.profile.first_name %> <%= user.profile.last_name %></h4>
					  <% end %>
					  <p id="job">
					  	<%= user.profile.job_title %>

					  	<% if user.plan_id == 2 %>
					  		<span class="label label-danger">PRO</span>
					  	<% end %>
					  </p>
				</div>


				</div>
			  </li>
			<% end %>
		<% end %> 
	</ul>
  </div>
</div>