<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1 class="text-center">Create Your Project</h1>
		<p class="text-center">It is great to be a part of the DevEntStartUp community. You can now fill out your project idea.</p>
		<div class="well">

			<!-- We call the partial form (_form.html.erb) -->
			<%= form_for @project, url: user_projects_path do |f| %>

				<div class="form-group">
					<i class="fa fa-pencil-square-o"></i>
					<%= f.label :category %>
					<%= f.select :category, ['Android', 'iOS', 'Web', 'Designer', 'Entrepreneur', 'Investor'], {}, class: 'form-control' %>
				</div>


				<div class="form-group">
					<i class="fa fa-pencil-square-o"></i>
					<%= f.label :business_name %>
					<%= f.text_field :business_name, class: 'form-control' %>
				</div>

				<div class="form-group">
					<i class="fa fa-globe"></i>
					<%= f.label :country %>
					<%= f.text_field :country, class: 'form-control' %>
				</div>


				<div class="form-group">
					<i class="fa fa-map-marker"></i>
					<%= f.label :province_or_state %>
					<%= f.text_field :province_or_state, class: 'form-control' %>
				</div>

				<div class="form-group">
					<i class="fa fa-building"></i>
					<%= f.label :city %>
					<%= f.text_field :city, class: 'form-control' %>
				</div>

				<div class="form-group">
					<i class="fa fa-envelope"></i>
					<%= f.label :zip_code %>
					<%= f.text_field :zip_code, class: 'form-control' %>
				</div>

				<div class="form-group">
					<i class="fa fa-map"></i>
					<%= f.label :address %>
					<%= f.text_field :address, class: 'form-control' %>
				</div>

				<div class="form-group">
					<i class="fa fa-phone"></i>
					<%= f.label :phone %>
					<%= f.text_field :phone, class: 'form-control' %>
				</div>

				<div class="form-group">
					<i class="fa fa-envelope"></i>
					<%= f.label :email %>
					<%= f.text_field :email, class: 'form-control' %>
				</div>

				<div class="form-group">
					<i class="fa fa-sitemap"></i>
					<%= f.label :website %>
					<%= f.text_field :website, class: 'form-control' %>
				</div>

				<div class="form-group">
					<i class="fa fa-camera"></i>
					<%= f.label :avatar %>
					<%= f.file_field :avatar, class: 'form-control' %>
				</div>

				<div class="form-group">
					<i class="fa fa-commenting"></i>
					<%= f.label :business_description %>
					<%= f.text_area :business_description, class: 'form-control' %>
				</div>


				<div class="form-group">
					<%= f.submit "Update Project", class: 'btn btn-success' %>
				</div>

			<% end %>
		

		</div>
	</div>
</div>