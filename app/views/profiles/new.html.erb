<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<h1 class="text-center"> Create Your Profile</h1>
		<p class="text-center">Be a part of the DevEntStartUp community and fill out your profile.</p>
		<div class="well">

			<%= form_for @profile, url: user_profile_path do |f| %>

				<div class="form-group">
					<i class="fa fa-pencil-square-o"></i>
					<%= f.label :first_name %>
					<%= f.text_field :first_name, class: 'form-control' %>
				</div>


				<div class="form-group">
					<i class="fa fa-pencil-square-o"></i>
					<%= f.label :last_name %>
					<%= f.text_field :last_name, class: 'form-control' %>
				</div>


				<div class="form-group">
					<i class="fa fa-male"></i> / <i class="fa fa-female"></i>
					<%= f.label :sex %>
					<%= f.select :sex, ['Male', 'Female'], {}, class: 'form-control' %>
				</div>

				<div class="form-group">
					<i class="fa fa-briefcase"></i>
					<%= f.label :job_title %>
					<%= f.select :job_title, ['Developer', 'Entrepreneur', 'Investor'], {}, class: 'form-control' %>
				</div>

				<div class="form-group">
					<i class="fa fa-phone"></i>
					<%= f.label :phone_number %>
					<%= f.text_field :phone_number, class: 'form-control' %>
				</div>

				<div class="form-group">
					<i class="fa fa-envelope"></i>
					<%= f.label :contact_email %>
					<%= f.text_field :contact_email, class: 'form-control' %>
				</div>

				<div class="form-group">
					<i class="fa fa-globe"></i>
					<%= f.label :country %>
					<%= f.text_field :country, class: 'form-control' %>
				</div>

				<div class="form-group">
					<i class="fa fa-map-marker"></i>
					<%= f.label :location %>
					<%= f.text_field :location, class: 'form-control' %>
				</div>

				<div class="form-group">
					<i class="fa fa-pencil"></i>
					<%= f.label :description %>
					<%= f.text_area :description, class: 'form-control' %>
				</div>


				<div class="form-group">
					<%= f.submit "Update Profile", class: 'btn btn-success' %>
				</div>

			<% end %>

		</div>
	</div>
</div>