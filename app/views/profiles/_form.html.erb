<%= form_for @profile, url: user_profile_path, html: { multipart: true } do |f| %>

	<div class="form-group">
		<i class="fa fa-pencil-square-o"></i>
		<%= f.label :first_name %>
		<%= f.text_field :first_name, class: 'form-control' %>
	</div>


	<div class="form-group">
		<i class="fa fa-pencil-square-o"></i>
		<%= f.label :last_name %>
		<%= f.text_field :last_name, class: 'form-control' %>
	</div>

	<div class="form-group">
		<i class="fa fa-male"></i> / <i class="fa fa-female"></i>
		<%= f.label :sex %>
		<%= f.select :sex, ['Male', 'Female'], {}, class: 'form-control' %>
	</div>

	<div class="form-group">
		<i class="fa fa-camera"></i>
		<%= f.label :avatar %>
		<%= f.file_field :avatar, class: 'form-control' %>
	</div>

	<div class="form-group">
		<i class="fa fa-briefcase"></i>
		<%= f.label :job_title %>
		<%= f.select :job_title, ['Developer(Apps-Android)', 'Developer(Apps-iOS)','Developer(Web)', 'Designer', 'Entrepreneur', 'Investor'], {}, class: 'form-control' %>
	</div>

	<div class="form-group">
		<i class="fa fa-phone"></i>
		<%= f.label :phone_number %>
		<%= f.text_field :phone_number, class: 'form-control' %>
	</div>

	<div class="form-group">
		<i class="fa fa-envelope"></i>
		<%= f.label :contact_email %>
		<%= f.text_field :contact_email, class: 'form-control' %>
	</div>

	<div class="form-group">
		<i class="fa fa-globe"></i>
		<%= f.label :country %>
		<%= f.text_field :country, class: 'form-control' %>
	</div>

	<div class="form-group">
		<i class="fa fa-map-marker"></i>
		<%= f.label :location %>
		<%= f.text_field :location, class: 'form-control' %>
	</div>

	<div class="form-group">
		<i class="fa fa-pencil"></i>
		<%= f.label :description %>
		<%= f.text_area :description, class: 'form-control' %>
	</div>


	<div class="form-group">
		<%= f.submit "Update Profile", class: 'btn btn-success' %>
	</div>

<% end %>
