<!DOCTYPE html>
<html>
<head>
  <title>DevEntStartUp</title>
  <%= stylesheet_link_tag    'application', media: 'all' %>
  <%= javascript_include_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
<body>

<nav class="navbar navbar-inverse navbar-static-top" role="navigation">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#main-nav-collapse">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to root_path, class: 'navbar-brand' do %>
      	<i class="fa fa-users"></i>
      	DevEntStartUp
      <% end %>
    </div>
    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="main-nav-collapse">
      <div class="nav navbar-nav navbar-right">

        <% if current_user %>

          <%= button_to destroy_user_session_path, class: 'btn btn-danger navbar-btn', method: :delete do %>
            <i class="fa fa-sign-out"></i>
            Sign Out
          <% end %>

        <% else %>
          <!-- link_to = <a href=""></a> -->
          <%= link_to new_user_session_path, class: 'btn btn-default navbar-btn', method: :get do %>
            <i class="fa fa-sign-in"></i>
            Log In
          <% end %>

        <% end %>

      </div>
      <ul class="nav navbar-nav navbar-right">
        <li><%= link_to "About", about_path %></li>
        <li><%= link_to "Contact Us", new_contact_path %></li>

       </ul>
    </div><!-- /.navbar-collapse -->
  </div><!-- /.container-fluid -->
</nav>

<div class="container">
<!-- Displaying message alert -->
  <% flash.each do |key, value| %>
    <%= content_tag :div, value, class: "alert alert-#{key}" %>
  <% end %>

	<%= yield %>
  
</div>


</body>
</html>
