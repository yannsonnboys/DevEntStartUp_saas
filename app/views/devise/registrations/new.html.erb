<div class="row">
  <div class="col-md-6 col-md-offset-3 text-center">
  <!-- Check if Pro or Basic account -->
    <% if params[:plan] == '2' %>
      <h1>Pro Account</h1>
      <p>Sign up for the Pro account for <strong>12&euro;/month</strong> and get Basic access to the community and all contact information!</p>
    <% else %>
      <h1>Basic Account</h1>
      <p>Sign up for free account and get Basic access to the community!</p>  
    <% end %>

  </div>

  <div class="col-md-4 col-md-offset-4">
    <div class="well">
        <h2 class="text-center">Sign Up</h2>

        <% if params[:plan] == '2' %>
          <%= render "pro_form" %> <!-- link to the partial file (_basic_form) -->
        <% else %>
          <%= render "basic_form" %> <!-- link to the partial file (_pro_form) -->
        <% end %>

        <%= render "devise/shared/links" %>

      </div>
    </div>
</div>
